{
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "yiisoft/yii2": "2.0.43",
    "hashids/hashids": "4.1.0",
    "creocoder/yii2-taggable": "2.0.0"
  },
  "require-dev": {
    "vlucas/phpdotenv": "^5.4",
    "phpunit/phpunit": "^9.5"
  },
  "provide": {
    "bower-asset/jquery": "*",
    "bower-asset/yii2-pjax": "*",
    "bower-asset/punycode": "*",
    "bower-asset/inputmask": "*",
    "cebe/markdown": "*",
    "ezyang/htmlpurifier": "*"
  },
  "autoload-dev": {
    "psr-4": {
      "app\\tests\\": "tests//"
    }
  },
  "scripts": {
    "serve": "@php yii serve 127.0.0.1:8000",
    "test": ["@test:console", "@test:feature", "@test:unit"],
    "test:console": "phpunit --bootstrap tests/console/bootstrap.php --testsuite console",
    "test:feature": "phpunit --bootstrap tests/feature/bootstrap.php --testsuite feature",
    "test:unit": "phpunit --bootstrap tests/unit/bootstrap.php --testsuite unit",
    "clean": "rm -rf runtime/* vendor"
  }
}
